generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ChessGame {
  id          Int           @id @default(autoincrement())
  moves       Int[]         @default([])
  game        String        @unique
  fen         String        @default("none")

  victorId    Int?
  whiteId     Int?
  blackId     Int?

  victor      User?         @relation(name: "victor", fields: [victorId], references: [id])
  white       User?         @relation(name: "white", fields: [whiteId], references: [id])
  black       User?         @relation(name: "black", fields: [blackId], references: [id])
}

model User {
  id          Int           @id @default(autoincrement())
  username    String        @unique
  password    String
  token       String        @unique
  
  victories   ChessGame[]   @relation(name: "victor")
  whiteGames  ChessGame[]   @relation(name: "white")
  blackGames  ChessGame[]   @relation(name: "black")

  @@unique([username, token])
}